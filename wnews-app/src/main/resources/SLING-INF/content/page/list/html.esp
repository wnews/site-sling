<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="<%= currentNode.title %>">
    <meta name="author" content="Waranga News Inc.">
    <link rel="icon" href="/apps/wnews/favicon.ico">

    <title>
      <%
        var pageNumSuffix = request.requestPathInfo.suffix ? request.requestPathInfo.suffix : "";
        sling.include(currentNode.path + '.html' + pageNumSuffix, "wp-paging/block/title");
      %>
    </title>

    <!-- Bootstrap core CSS -->
    <link href="/libs/wp-bootstrap/bower_components/bootstrap-css/css/bootstrap.css" rel="stylesheet">

    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="/libs/wp-bootstrap/css/ie10-viewport-bug-workaround.css" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Droid+Serif" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom styles for this template -->
    <link href="/apps/wnews/css/style.css" rel="stylesheet">
    <link href="/apps/wnews/css/grid.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- Sling -->
    <!--<script src="/system/sling.js"></script>-->
  </head>

  <body>
      <% sling.include("header.html/" + currentNode.name); %>

    <div class="container">

      <div class="row">
        <div class="col-md-8">
          <div class="col-md-12" style="text-align: center;">
            <hr class="separator"/>
          </div>

          <%
            if (currentNode.list) {
              var currentPage = request.requestPathInfo.suffix ? request.requestPathInfo.suffix : "";
              sling.include(currentNode + "/list.html" + currentPage);
              if (currentNode.list.paging) {
                if (!currentPage || 0 === currentPage.length) {
                  sling.include(currentNode + "/list/paging.html" + currentNode);
                } else {
                  sling.include(currentNode + "/list/paging." + currentPage.substring(1) + ".html" + currentNode);
                }
              }
            }
          %>
        </div>
        <div class="col-md-4" id="sidebar-ads">
          <%-- sling.include("/content/wnews/advertisements/list.html/5"); --%>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2">
            <p class="block-title">Past issues</p>
            <% sling.include("past-issues/list.text.html/5"); %>
        </div>
        <div class="col-md-3">
          <p class="block-title">Regional news</p>
          <% sling.include("regional-news.html/5"); %>
        </div>
        <div class="col-md-3">
          <p class="block-title">Related sites</p>
            <% sling.include("related-sites/list.text.html/5"); %>
        </div>
        <div class="col-md-3">
          <p class="block-title">Weather</p>
          <% sling.include("weather.html"); %>
        </div>
      </div>
    </div> <!-- /container -->

    <% sling.include("footer.html"); %>
      <script>
      $("#sidebar-ads").load("<%= resource.resourceResolver.map(request, '/content/wnews/advertisements/list.html/5') %> .wnews-list-ads");
    </script>
  </body>
</html>
